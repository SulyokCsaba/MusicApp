<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.musicapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.android.musicapp.MainActivity" />
        <activity
            android:name="com.example.android.musicapp.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.android.musicapp.PlayerActivity"
            android:label="@string/Music_Player"
            android:parentActivityName="com.example.android.musicapp.MainActivity" />
        <activity android:name="com.example.android.musicapp.ArtistActivity" />
        <activity android:name="com.example.android.musicapp.DetailsAlbumActivity" />
        <activity android:name="com.example.android.musicapp.AlbumActivity"></activity>
    </application>

</manifest>